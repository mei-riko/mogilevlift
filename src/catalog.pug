            .container
                .row
                    .col-3.col-lg-12
                        p.subtitle Товары категории
                    .col-9.col-lg-12.mt-lg-1.mt-sm-0
                        .row
                            .col-4.col-xs-12.col-sm-6
                                a.preview.preview_service.border(href="product.html")
                                    .preview_service__num 01
                                    p.preview__title.preview_service__title Автомобильные лифты
                            .col-4.col-xs-12.col-sm-6
                                a.preview.preview_service.border(href="product.html")
                                    .preview_service__num 02
                                    p.preview__title.preview_service__title Для кафе и&nbsp;ресторанов
                            .col-4.col-xs-12.col-sm-6
                                a.preview.preview_service.border(href="product.html")
                                    .preview_service__num 03
                                    p.preview__title.preview_service__title Сейсмоустойчивые
