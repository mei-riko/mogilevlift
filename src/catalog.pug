html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Catalog

        link(href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;700&display=swap" rel="stylesheet")
        link(href='./css/style.css', rel='stylesheet')

    body
        script(src="http://code.jquery.com/jquery-3.3.1.min.js")
        include chunks/header.pug
        section.container.bg-lines.pt-4.pb-4.content-header
            .row
                .col-6.col-md-12.col-lg-8
                    p.subtitle Лифты
                    h1.h2.text-bold Пассажирские, грузовые и&nbsp;для&nbsp;лечебно-профилактических учреждений
            .row.justify-content-end.mt-2.mb-2.mt-md-1.mb-md-1
                .col-3.col-md-4.col-xs-12.stats
                    p.stats__title 15% экономии
                    p.stats__content бюджета в&nbsp;среднем у&nbsp;наших клиентов
                .col-3.col-md-4.col-xs-12.stats.mt-xs-1
                    p.stats__title 900 проектов
                    p.stats__content под&nbsp;ключ выполнено по&nbsp;России
                .col-3.col-md-4.col-xs-12.stats.mt-xs-1
                    p.stats__title 3370&nbsp;лифтов
                    p.stats__content поставленно за&nbsp;16&nbsp;лет по&nbsp;всей&nbsp;России
            .row.justify-content-end
                .col-3.col-md-12
                    a.btn.btn_link(href="#") Получить консультацию
                        svg.btn_link__arrow(width="24" height="24" viewBox="0 0 24.00 24.00")
                            path(fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z ")
        section.border-top.statistic
            .container.pt-2.pb-2
                h2.h4 Лифты от «Могилёвлифт» это:
            .bg-secondary
                .container
                    .stats.stats_full
                        .stats_full__item
                            .stats_full__title 133
                            .stats__content.stats_full__content модели лифтов доступно
                        .stats_full__item
                            .stats_full__title 78
                            .stats__content.stats_full__content дополнительных спецификаций
                        .stats_full__item
                            .stats_full__title 3+
                            .stats__content.stats_full__content поставки в&nbsp;сроки от&nbsp;3&nbsp;недель
                        .stats_full__item
                            .stats_full__title 0
                            .stats__content.stats_full__content бесплатный выезд специалиста
        // Варианты дизайна
        section.container.pt-1.pb-1
            .row.align-items-center
                .col-3.col-md-12
                    p.h5.text-uppercase.text-grey 51 вариант дизайна&nbsp;для&nbsp;кабины
                .col-9.col-md-12.tabs-container.mt-md-1.mt-sm-0
                    ul.list.tabs
                        li.tabs__item.tabs__item--active
                            a.tabs__link.tabs__link--active(href="section-1" data-trigger="click") 
                                span.tabs__inside Classic
                        li.tabs__item
                            a.tabs__link(href="section-2" data-trigger="click") 
                                span.tabs__inside Modern
                        li.tabs__item
                            a.tabs__link(href="section-3" data-trigger="click") 
                                span.tabs__inside Natural
                        li.tabs__item
                            a.tabs__link(href="section-4" data-trigger="click") 
                                span.tabs__inside Elite
                        li.tabs__item
                            a.tabs__link(href="section-5" data-trigger="click") 
                                span.tabs__inside Elite Gold
        section.border-top
            .container.bg-lines.pt-3.pb-3
                .slider.slider_inside-container.tabs-content#section-1
                    .slider__content(data-slider="slick")
                        a.slider__item(href="../demo/01.png" data-fancybox="review")
                            img.img-fluid(src="../demo/01.png" alt="" title="")
                        a.slider__item(href="../demo/02.png" data-fancybox="review")
                            img.img-fluid(src="../demo/02.png" alt="" title="")
                        a.slider__item(href="../demo/03.png" data-fancybox="review")
                            img.img-fluid(src="../demo/03.png" alt="" title="")
                        a.slider__item(href="../demo/04.png" data-fancybox="review")
                            img.img-fluid(src="../demo/04.png" alt="" title="")
                        a.slider__item(href="../demo/05.png" data-fancybox="review")
                            img.img-fluid(src="../demo/05.png" alt="" title="")
                        a.slider__item(href="../demo/06.png" data-fancybox="review")
                            img.img-fluid(src="../demo/06.png" alt="" title="")
                        a.slider__item(href="../demo/01.png" data-fancybox="review")
                            img.img-fluid(src="../demo/01.png" alt="" title="")
                        a.slider__item(href="../demo/02.png" data-fancybox="review")
                            img.img-fluid(src="../demo/02.png" alt="" title="")
                        a.slider__item(href="../demo/03.png" data-fancybox="review")
                            img.img-fluid(src="../demo/03.png" alt="" title="")
        // CTA
        section.border-top.border-bottom.pt-3.pb-3(style="overflow:hidden;")
            .container
                .row.justify-content-center
                    .col-9.text-center.col-sm-12
                        p.heading.text-bold 
                            span.p-relative(style="z-index:2;") Узнайте стоимость и выберите дизайн кабины 
                            span.text-decoration
                                span.text-decoration__elem
                                span.text-decoration__elem
                                span.text-decoration__elem
                                span.text-decoration__elem
                                span.text-decoration__content.text-gold онлайн
                        a.btn.btn_main(href="#") 
                            span.btn__inside Конструктор лифта
        // Ссылки
        section.border-top.pt-1.pb-1
            .container.btn-container
                .btn-group
                    .btn-group__item
                        a.btn.btn_icon(href="#")
                            span.btn_icon__content Соответствие оборудования ГОСТ и регламентам
                            span.btn_icon__img
                                svg(width="24" height="24" viewBox="0 0 24.00 24.00")
                                    path(d="M15,13h-1v-2.3l-6.7,6.7l-0.7-0.7l6.7-6.7H11V9h4V13z M20,16h-9l1-1h7V5H9v7l-1,1V4h12V16z M6,9v1H4v10h10v-2h1	v3H3V9H6z")
                    .btn-group__item
                        a.btn.btn_icon(href="#")
                            span.btn_icon__content Соответствие СРО
                            span.btn_icon__img
                                svg(width="24" height="24" viewBox="0 0 24.00 24.00")
                                    path(fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z ")
                    .btn-group__item
                        a.btn.btn_icon(href="#")
                            span.btn_icon__content Соответствие ISO
                            span.btn_icon__img
                                svg(width="24" height="24" viewBox="0 0 24.00 24.00")
                                    path(fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z ")
                    .btn-group__item
                        a.btn.btn_icon(href="#")
                            span.btn_icon__content Дилерский договор
                            span.btn_icon__img
                                svg(width="24" height="24" viewBox="0 0 24.00 24.00")
                                    path(fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 4,12L 16.25,12L 11,6.74994L 11.6643,6L 18.1642,12.5L 11.6642,19L 11,18.25L 16.25,13L 4,13L 4,12 Z ")
